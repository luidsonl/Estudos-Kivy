<Kanban@TabbedPanelItem>:
    text: 'Kanban'
    ScrollView:
        size_hint: (1, 1)
        do_scroll_x: False
        do_scroll_y: True
        padding: [10, 30, 10, 10]

        GridLayout:
            rows: 2
            size_hint_y: None
            height: self.minimum_height

            # Primeira linha com labels de status
            GridLayout:
                cols: 3
                spacing: 10
                size_hint_y: None
                height: 50

                Label:
                    text: 'To do'
                    size_hint_y: None
                    height: 50

                Label:
                    text: 'Doing'
                    size_hint_y: None
                    height: 50

                Label:
                    text: 'Done'
                    size_hint_y: None
                    height: 50

            # Segunda linha com items
            GridLayout:
                cols: 3
                spacing: 10
                size_hint_y: None
                height: self.minimum_height 

                GridLayout:
                    cols: 1
                    spacing: 10  
                    size_hint_y: None

                    Label:
                        text: 'Item 1'
                        size_hint_y: None
                        height: 50

                    Label:
                        text: 'Item 2'
                        size_hint_y: None
                        height: 50

                    Label:
                        text: 'Item 3'
                        size_hint_y: None
                        height: 50

                GridLayout:
                    cols: 1
                    spacing: 10
                    size_hint_y: None

                    Label:
                        text: 'Item 4'
                        size_hint_y: None
                        height: 50

                GridLayout:
                    cols: 1
                    spacing: 10
                    size_hint_y: None

                    Label:
                        text: 'Item 5'
                        size_hint_y: None
                        height: 50
