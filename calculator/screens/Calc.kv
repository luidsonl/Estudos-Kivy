<NumericKey@Button>:
    size_hint: (0.2, 0.2)
    font_size: 32
    on_press: app.root.button_click(self.text)

<ArithmeticKey@Button>:
    size_hint: (0.2, 0.2)
    font_size: 32
    on_press: app.root.button_click(self.text)

<ClearKey@Button>:
    size_hint: (0.2, 0.2)
    font_size: 32
    on_press: app.root.clear()
    background_color: (1, 0.8, 0.8)

<BackspaceKey@Button>:
    size_hint: (0.2, 0.2)
    font_size: 32
    on_press: app.root.back()
    background_color: (1, 0.8, 0.8)


<EqualsKey@Button>:
    size_hint: (0.2, 0.2)
    font_size: 32
    on_press: app.root.calculate()
    background_color: (0.2, 1, 0.2)


<NumericInput@TextInput>:
    text: ''
    hint_text: '0'
    halign: 'right'
    font_size: 65
    size_hint: (1, 0.2)
    on_text: app.root.validate_input(self, self.text)
    multiline: False
    

<Calc>:
    orientation: 'vertical'


    NumericInput:
        id: calc_input

    GridLayout:
        cols: 4
        rows: 5
        
        # Row
        ArithmeticKey:
            text: '%'

        BackspaceKey:
            text: 'Back'

        ClearKey:
            text: 'Clear'

        ArithmeticKey:
            text: '/'

        # Row
        NumericKey:
            text: '7'

        NumericKey:
            text: '8'

        NumericKey:
            text: '9'

        ArithmeticKey:
            text: 'X'

        # Row
        NumericKey:
            text: '4'

        NumericKey:
            text: '6'

        NumericKey:
            text: '5'

        ArithmeticKey:
            text: '-'

        # Row
        NumericKey:
            text: '1'

        NumericKey:
            text: '2'

        NumericKey:
            text: '3'

        ArithmeticKey:
            text: '+'

        # Row

    GridLayout:
        cols: 3
        rows: 1
        size_hint_y: 0.2

        NumericKey:
            text: '0'
            size_hint_x: 0.25

        NumericKey:
            text: '.'
            size_hint_x: 0.25

        EqualsKey:
            text: '='
            size_hint_x: 0.5

    